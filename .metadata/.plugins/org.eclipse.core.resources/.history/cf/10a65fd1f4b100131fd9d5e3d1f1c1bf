
public class Mensagens {

	public void tratarMensagens(String mensagemNaoTratada) {
		
		boolean pParte = true;
		String ipDestino = "";
		String mensagem = "";
	
		//String sLinha = scannerCliente.nextLine();  // "nextLine()" sรณ pode ser usado uma vez
	 
		for(int i=0;i< mensagemNaoTratada.length();i++){  
		   char c = mensagemNaoTratada.charAt(i);
			   
		   if (c == '|') {
			   pParte = false;
		   }
		   else if (pParte) {
			   ipDestino = ipDestino + c;
		   }
		   else if (!pParte) {
			   mensagem = mensagem + c;
		   }
		} 
	}
}
