import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;


public class EntradaDados implements Runnable {
	
	private int portaEntrada;

	public EntradaDados(int portaEntrada) {
		this.portaEntrada = portaEntrada;
	}
	
	public void run() {
		
	}
	
	private void AbreConexao() {
		Socket socketEntrada = null;
		
		// Abre conexão de entrada com o servidor
		ServerSocket SSentrada = new ServerSocket(this.portaEntrada);
	    System.out.println("Porta "+this.portaEntrada+" aberta!");
	    //Conecta ao servidor
	    try {
	    	socketEntrada = SSentrada.accept();
	    } catch(IOException e) {
	    	System.out.println("Erro ao receber conexão do servidor!");
	    }
	    System.out.println("Conectou ao servidor!");
		// Envia objeto para Thread
	    TrataServidor ts = new TrataServidor(socketEntrada);
	    new Thread(ts).start();
	}
	
}
